{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8000",
    "healthcheckPath": "/ask",
    "restartPolicyType": "ON_FAILURE"
  },
  "plugins": {
    "web": {
      "port": 8000
    }
  }
}
